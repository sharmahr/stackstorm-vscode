{
	"name": "stackstorm-vscode",
	"displayName": "Stackstorm VSCode",
	"description": "VScode extension for stackstorm pack creation",
	"publisher": "systemsmystery",
	"author": {
		"name": "Richard Annand"
	},
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.31.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rj175/stackstorm-vscode"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:st2.gen_packFile",
		"onCommand:st2.gen_configSchema"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "st2.gen_packFile",
				"title": "Generate Pack Config File"
			},
			{
				"command": "st2.gen_configSchema",
				"title": "Generate Config Schema"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "st2.gen_packFile",
					"group": "st2@1"
				},
				{
					"command": "st2.gen_configSchema",
					"group": "st2@2"
				}
			]
		}
	},
	"scripts": {
		"moveTemplate": "copyfiles templateFiles/**/*.tmpl ./out/",
		"vscode:prepublish": "npm run moveTemplate && npm run compile",
		"compile": "npm run moveTemplate && tsc -p ./",
		"watch": "npm run moveTemplate && tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"copyfiles": "^2.1.0",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vsce": "^1.57.1",
		"vscode": "^1.1.28"
	}
}
