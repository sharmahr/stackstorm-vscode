{
	"name": "stackstorm-vscode",
	"displayName": "Stackstorm VSCode",
	"description": "VScode extension for stackstorm pack creation",
	"publisher": "systemsmystery",
	"author": {
		"name": "Richard Annand"
	},
	"version": "1.3.0",
	"engines": {
		"vscode": "^1.31.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/systemsmystery/stackstorm-vscode"
	},
	"bugs": {
		"url": "https://github.com/systemsmystery/stackstorm-vscode/issues"
	},
	"keywords": [
		"Stackstorm",
		"ST2",
		"templates"
	],
	"categories": [
		"Other"
	],
	"license": "SEE LICENSE IN LICENSE",
	"icon": "images/logo.jpg",
	"activationEvents": [
		"*"
	],
	"main": "./out/src/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "Stackstorm Pack Configuration",
			"properties": {
				"st2.defaultAuthor": {
					"type": "string",
					"default": null,
					"description": "Default pack author to use in pack configuration file."
				},
				"st2.defaultEmail": {
					"type": "string",
					"default": null,
					"description": "Default pack email to use in pack configuration file."
				}
			}
		},
		"commands": [
			{
				"command": "st2.gen_packFile",
				"title": "ST2: Generate Pack Config File"
			},
			{
				"command": "st2.gen_configSchema",
				"title": "ST2: Generate Config Schema"
			},
			{
				"command": "st2.gen_readMe",
				"title": "ST2: Generate Pack README"
			},
			{
				"command": "st2.gen_actionMetadata",
				"title": "ST2: Generate Action Metadata File"
			},
			{
				"command": "st2.gen_workflowMetadata",
				"title": "ST2: Generate Workflow Metadata File"
			},
			{
				"command": "st2.gen_ruleConfig",
				"title": "ST2: Generate Rule Config File"
			},
			{
				"command": "st2.gen_aliasMetadata",
				"title": "ST2: Generate Action Alias Metadata File"
			},
			{
				"command": "st2.gen_sensorMetadata",
				"title": "ST2: Generate Sensor Metadata File"
			},
			{
				"command": "st2.gen_policyMetadata",
				"title": "ST2: Generate Policy Metadata File"
			},
			{
				"command": "st2.bootstrap_folder",
				"title": "ST2: Bootstrap Folder"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "st2.gen_packFile",
					"group": "st2@1"
				},
				{
					"command": "st2.gen_configSchema",
					"group": "st2@1"
				},
				{
					"command": "st2.gen_readMe",
					"group": "st2@1"
				},
				{
					"command": "st2.gen_actionMetadata",
					"group": "st2@1"
				},
				{
					"command": "st2.gen_workflowMetadata",
					"group": "st2@1"
				},
				{
					"command": "st2.gen_ruleConfig",
					"group": "st2@1"
				},
				{
					"command": "st2.gen_aliasMetadata",
					"group": "st2@1"
				},
				{
					"command": "st2.gen_sensorMetadata",
					"group": "st2@1"
				},
				{
					"command": "st2.gen_policyMetadata",
					"group": "st2@1"
				}
			]
		}
	},
	"scripts": {
		"copyTemplates": "copyfiles templateFiles/**/*.tmpl ./out/src && copyfiles test/resources/**/* ./out",
		"vscode:prepublish": "npm run copyTemplates && npm run compile",
		"compile": "tsc -p ./ && npm run copyTemplates",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test",
		"test:coveralls": "node cat ./coverage/lcov.info | coveralls",
		"cover": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
		"coveralls-windows": "node proxy.js ./coverage/lcov.info"
	},
	"nyc": {
		"reporter": [
			"lcov"
		],
		"temp-directory": "./coverage/.nyc_output",
		"all": true,
		"exclude": "typings",
		"extension": [
			".ts"
		],
		"sourceMap": true,
		"instrument": true,
		"include": [
			"src/**/*.ts",
			"test/**/*.ts"
		]
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^2.2.48",
		"@types/node": "^10.12.21",
		"@types/sinon": "^7.0.9",
		"chai": "^4.2.0",
		"copyfiles": "^2.1.0",
		"coveralls": "^3.0.3",
		"decache": "^4.5.1",
		"glob": "^7.1.3",
		"istanbul": "^0.4.5",
		"mocha": "^6.0.2",
		"mocha-lcov-reporter": "^1.3.0",
		"nyc": "^13.3.0",
		"remap-istanbul": "^0.13.0",
		"sinon": "^7.2.7",
		"sinon-chai": "^3.3.0",
		"ts-node": "^8.0.2",
		"tslint": "^5.12.1",
		"tslint-config-standard": "^8.0.1",
		"typescript": "^3.3.3333",
		"vsce": "^1.57.1",
		"vscode": "^1.1.28",
		"vscode-linter": "^0.2.2"
	},
	"dependencies": {
		"@types/classnames": "^2.2.7",
		"@types/fs-extra": "^5.0.5",
		"@types/lodash": "^4.14.121",
		"classnames": "^2.2.6",
		"fs-extra": "^7.0.1",
		"lodash": "^4.17.11"
	}
}
